@import "whitespace-reset.css"
@import "mixins"
body
  font: normal 16px "Lato", sans-serif
  color: colors.text

h1
  padding: 0 0 25px 0
  font-size: 2em

#album_new
  width: 50%
  margin: 100px auto
  border: 1px solid colors.border
  padding: 40px

form
  dt
    padding: 0 0 5px 0
  dd
    padding: 0 0 20px 0
  input[type="text"],
  input[type="date"],
  input[type="url"]
    width: 100%
    height: 30px
    padding: 5px 8px
    border: 1px solid colors.border
    border-radius: 6px
    font-family: "Lato", Helvetica
    box-sizing: border-box
main
  width: 800px
  padding: 25px 40px
  background-color: colors.main
  margin: 0 auto

ul
  padding: 0 0 40px 0
  margin: 0 0 0 -20px
  li
    display: inline-block
    width: 20%
    padding: 0 0 25px 20px
    box-sizing: border-box
    vertical-align: top
    img
      display: block
      width: 100%
      margin: 0 0 10px 0
    h2, h3, p
      padding: 0 0 5px 0
    h2
      font-size: 1.5em
    h3
      font-size: 1.25em
a.button, input[type="submit"]
  button()